<link rel="stylesheet" href="/css/dash.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<h1 id="title">Dashboard</h1>
<div class="actions"><a href="/thoughts/create" id="thoughts">No que est√° Pensando?</a></div>
    <h2>Seus Pensamentos</h2>
<div class="content">
    {{#each thoughts}}
    <div class="thought">
        <h1>{{this.title}}</h1>
        <div id="action">
            <button><a href="/task/edit/{{this.id}}"><i class="bi bi-pen-fill"></i></a></button>
            <form action="/thoughts/delete" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit"><i class="bi bi-trash-fill"></i></button>
            </form>
        </div>
    </div>
    {{/each}}
</div>